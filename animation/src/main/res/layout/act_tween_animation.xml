<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/main_btn0"
        style="@style/CommonButton"
        android:text="AlpahAnimation" />

    <Button
        android:id="@+id/main_btn1"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="ScaleAnimation" />

    <Button
        android:id="@+id/main_btn2"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="RotateAnimation" />
    <Button
        android:id="@+id/main_btn3"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="TranslateAnimation" />
    <Button
        android:id="@+id/main_btn4"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="AnimationSet" />
    <Button
        android:id="@+id/main_btn5"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="LayoutAnimationController" />
    <Button
        android:id="@+id/main_btn6"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="Interpolator" />
    <Button
        android:id="@+id/main_btn7"
        style="@style/CommonButton"
        android:layout_marginTop="10dp"
        android:text="CustomAnimation" />



</LinearLayout>

